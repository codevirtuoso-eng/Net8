
ï»¿@model MvcWebApplication.ViewModels.ShoppingCarts.IndexViewModel
@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger">@Model.Message</div>
}

@if (Model.CartItems.Count == 0)
{
    <div class="alert alert-info">Your shopping cart is empty.</div>
    <a asp-controller="Shopping" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>$@item.UnitPrice.ToString("F2")</td>
                    <td>@item.Quantity</td>
                    <td>$@item.TotalPrice.ToString("F2")</td>
                    <td>
                        <form asp-controller="ShoppingCarts" asp-action="RemoveItem" method="post">
                            <input type="hidden" name="itemId" value="@item.ItemId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total:</th>
                <th>$@Model.TotalAmount.ToString("F2")</th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex justify-content-between">
        <a asp-controller="Shopping" asp-action="Index" class="btn btn-primary">Continue Shopping</a>

        <div>
            <form asp-controller="ShoppingCarts" asp-action="EmptyCart" method="post" class="d-inline">
                <button type="submit" class="btn btn-warning">Empty Cart</button>
            </form>
            <form asp-controller="ShoppingCarts" asp-action="Checkout" method="post" class="d-inline">
                <button type="submit" class="btn btn-success">Checkout</button>
            </form>
        </div>
    </div>
}
